<resources>

    <style name="TextAppearance.Naturblick.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.018</item>
    </style>

    <style name="TextAppearance.Naturblick.Subtitle3" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.018</item>
    </style>

    <style name="TextAppearance.Naturblick.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Naturblick.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.04</item>
    </style>

    <style name="TextAppearance.Naturblick.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.018</item>
    </style>

    <style name="TextAppearance.Naturblick.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0.042</item>
    </style>

    <style name="TextAppearance.Naturblick.MenuItem" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">17sp</item>
        <item name="fontWeight">900</item>
    </style>

    <style name="Theme.Naturblick.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="android:editTextColor">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="android:textColorHint">?attr/colorOnPrimaryHighEmphasis</item>
    </style>

    <style name="Theme.Naturblick.DarkBackgroundOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimaryHighEmphasis</item>
    </style>

    <style name="Theme.Naturblick.GroupsOverlay" parent="Theme.Naturblick.DarkBackgroundOverlay">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimaryHighEmphasis</item>
    </style>

    <style name="Theme.Naturblick.FABOverlay">
        <item name="backgroundTint">?attr/colorOnSecondaryButtonSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="tint">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="iconTint">?attr/colorOnPrimaryHighEmphasis</item>
    </style>

    <style name="Theme.Naturblick.OnPrimaryFABOverlay">
        <item name="backgroundTint">?attr/colorOnPrimaryButtonPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="tint">?attr/colorOnPrimaryHighEmphasis</item>
        <item name="iconTint">?attr/colorOnPrimaryHighEmphasis</item>
    </style>

    <style name="Widget.Naturblick.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="itemTextAppearance">@style/TextAppearance.Naturblick.MenuItem</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
        <item name="itemShapeInsetStart">0dp</item>
        <item name="itemShapeInsetTop">0dp</item>
        <item name="itemShapeInsetEnd">0dp</item>
        <item name="itemShapeInsetBottom">0dp</item>
        <item name="itemShapeAppearance">@drawable/shape_rectangle</item>
        <item name="itemMaxLines">2</item>
    </style>

    <style name="Widget.Naturblick.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnSecondaryMinimumEmphasis</item>
        <item name="iconTint">?attr/colorOnSecondaryMinimumEmphasis</item>
        <item name="backgroundTint">?attr/colorOnSecondaryButtonPrimary</item>
    </style>

    <style name="Widget.Naturblick.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOnSecondarySignalLow</item>
        <item name="android:textColor">?attr/colorOnSecondaryHighEmphasis</item>
        <item name="iconTint">?attr/colorOnSecondaryHighEmphasis</item>
    </style>

    <style name="Widget.Naturblick.SpeciesOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOnSecondaryLowEmphasis</item>
        <item name="android:textColor">?attr/colorOnSecondaryButtonPrimary</item>
    </style>

    <style name="Widget.Naturblick.OutlinedErrorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOnSecondarySignalHigh</item>
        <item name="android:textColor">?attr/colorOnSecondarySignalHigh</item>
    </style>

    <style name="Naturblick.AlertTitleStyle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorOnSecondaryHighEmphasis</item>
        <item name="android:maxLines">15</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Naturblick.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnSecondaryButtonPrimary</item>
    </style>

    <style name="Naturblick.Alert.Body" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSecondaryHighEmphasis</item>
    </style>

    <style name="Naturblick.Alert.CheckedTextView" parent="Widget.MaterialComponents.CheckedTextView">
        <item name="android:textColor">?attr/colorOnSecondaryHighEmphasis</item>
    </style>

    <style name="Naturblick.MaterialComponents.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/Naturblick.AlertTitleStyle</item>
        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="buttonBarPositiveButtonStyle">@style/Naturblick.Button.TextButton.Dialog</item>
        <item name="buttonBarNeutralButtonStyle">@style/Naturblick.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Naturblick.Button.TextButton.Dialog</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Naturblick.Alert.Body</item>
        <item name="android:textColorAlertDialogListItem">?attr/colorOnSecondaryHighEmphasis</item>
        <item name="android:checkedTextViewStyle">@style/Naturblick.Alert.CheckedTextView</item>
        <item name="colorAccent">?attr/colorOnSecondaryHighEmphasis</item>
    </style>

    <style name="Widget.Naturblick.SpinnerItem" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/colorOnSecondaryMediumEmphasis</item>
    </style>

    <style name="Widget.Naturblick.TextInputLayout.FilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/colorOnSecondaryMinimumEmphasis</item>
        <item name="startIconTint">?attr/colorOnSecondaryLowEmphasis</item>
        <item name="endIconTint">?attr/colorOnSecondaryLowEmphasis</item>
        <item name="hintTextColor">?attr/colorOnSecondarySignalLow</item>
        <item name="android:textColorHint">?attr/colorOnSecondarySignalLow</item>
        <item name="android:textColor">?attr/colorOnSecondaryMediumEmphasis</item>
        <item name="boxStrokeColor">?attr/colorOnSecondarySignalLow</item>
        <item name="helperTextTextColor">?attr/colorOnSecondaryMediumEmphasis</item>
    </style>

</resources>
